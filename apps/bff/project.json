{
  "name": "bff",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/bff/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "bff:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "bff:build:development"
        },
        "production": {
          "buildTarget": "bff:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/bff/jest.config.ts",
        "codeCoverage": true
      },
      "configurations": {
        "ci": {
          "ci": true
        }
      }
    },
    "container": {
      "executor": "@mschoenbo/nx-build-tools:tag-and-build",
      "options": {
        "appName": "bff",
        "dockerRepository": "ghcr.io/fraunhofer-iml/greencomplai",
        "dockerfile": "apps/bff/Dockerfile",
        "tagPrefix": "v",
        "push": true,
        "additionalTags": ["latest"]
      }
    }
  }
}
